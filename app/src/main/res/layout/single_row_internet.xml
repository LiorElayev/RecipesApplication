<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageInternetRow"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/internet_ic" />

        <TextView
            android:id="@+id/linkNameRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Link Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/imageInternetRow"
            android:layout_toEndOf="@+id/imageInternetRow" />

        <TextView
            android:id="@+id/linkDescriptionRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imageInternetRow"
            android:layout_toEndOf="@+id/imageInternetRow"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/linkNameRow"
            android:text="Description"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>